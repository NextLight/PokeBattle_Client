<ListBox x:Class="PokeBattle_Client.PokemonPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeBattle_Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseDoubleClick="ListBox_MouseDoubleClick">
    <ListBox.ItemTemplate>
        <DataTemplate>
            <local:PokemonView Height="100" ImageSide="Left"></local:PokemonView>
        </DataTemplate>
    </ListBox.ItemTemplate>

</ListBox>
