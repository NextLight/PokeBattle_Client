<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PokeBattle_Client.MainWindow"
        Title="MainWindow" Height="408" Width="640">
    <Grid>
        <Grid x:Name="gridConnection" d:IsHidden="True" >
            <TextBox x:Name="txtIP" HorizontalAlignment="Center" Height="23" Margin="0,0,0,40" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Center" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Center" Width="75" Click="btnConnect_Click"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image x:Name="img1" Margin="0,10,10,10" HorizontalAlignment="Right" Width="{Binding Height}"/>
            <Grid >
                <ProgressBar HorizontalAlignment="Left" Height="14" Margin="25,65,0,0" VerticalAlignment="Top" Width="208"/>
                <Label x:Name="lblName" Content="" HorizontalAlignment="Left" Margin="25,40,0,0" VerticalAlignment="Top" Height="20" Padding="0" Width="147"/>
                <Label Content="Lv" HorizontalAlignment="Left" Margin="177,40,0,0" VerticalAlignment="Top" Height="20" Padding="0"/>
                <Label x:Name="lblLevel" Content="" HorizontalAlignment="Left" Margin="191,40,0,0" VerticalAlignment="Top" Height="20" Width="42" Padding="0"/>
                <Label Content="HP" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Height="14" Padding="0" Width="15"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
